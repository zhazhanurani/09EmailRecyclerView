<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <!-- Main Card Background Layer -->
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- White background color -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" /> <!-- Semi-transparent black for shadow -->
            <corners android:radius="20dp" /> <!-- Radius to match the main background -->
        </shape>
    </item>
</layer-list>
